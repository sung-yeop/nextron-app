{
  "private": true,
  "name": "nextron-starter",
  "description": "nextron-starter",
  "version": "1.0.1",
  "author": "Your Name <your.email@example.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --cache renderer/**/*.{ts,tsx}",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write --cache renderer/**/*.{ts,tsx}",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "renderer/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --cache",
      "prettier --write --cache"
    ]
  },
  "build": {
    "appId": "com.sung-yeop.nextron-app",
    "productName": "Nextron-Test",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "publish": {
      "provider": "github",
      "owner": "sung-yeop",
      "repo": "nextron-app"
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.9.0",
    "electron-log": "^5.4.1",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.18.1",
    "lucide-react": "^0.515.0",
    "recharts": "^2.15.4",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.21",
    "electron": "^34.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "next": "^14.2.4",
    "nextron": "^9.5.0",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3"
  }
}
